{
  "manifest_version": 3,
  "name": "DropResume",
  "version": "1.0",
  "description": "Track and manage your job applications effortlessly.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/dropresume_icon.png",
      "48": "icons/dropresume_icon.png",
      "128": "icons/dropresume_icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
